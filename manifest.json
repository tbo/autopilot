{
  "name": "Autopilot",
  "version": "0.1",
  "description": "Autopilot organizes tabs",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "tabGroups"],
  "commands": {
    "switch-to-next-tab": {
      "suggested_key": { "default": "Alt+Shift+J" },
      "description": "switch to next tab"
    },
    "switch-to-previous-tab": {
      "suggested_key": { "default": "Alt+Shift+K" },
      "description": "switch to previous tab"
    },
    "prepend-active-tab": {
      "description": "prepend active tab"
    },
    "history-back": {
      "suggested_key": { "default": "Ctrl+H" },
      "description": "history back"
    },
    "history-forward": {
      "suggested_key": { "default": "Ctrl+L" },
      "description": "history forward"
    }
  },
  "manifest_version": 3
}
