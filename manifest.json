{
    "name": "Autopilot",
    "version": "0.1",
    "description": "Autopilot organizes tabs",
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "permissions": [
        "activeTab"
    ],
    "commands": {
        "switch-to-next-tab": {
            "suggested_key": { "default": "Ctrl+J" },
            "description": "switch to next tab"
        },
        "switch-to-previous-tab": {
            "suggested_key": { "default": "Ctrl+K" },
            "description": "switch to previous tab"
        },
        "history-back": {
            "suggested_key": { "default": "Ctrl+H" },
            "description": "history back"
        },
        "history-forward": {
            "suggested_key": { "default": "Ctrl+L" },
            "description": "history forward"
        }
    },
    "manifest_version": 2
}
